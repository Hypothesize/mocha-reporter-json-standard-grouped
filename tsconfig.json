{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"rootDirs": [
			"src",
			"test"
		],
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"incremental": true,
		"sourceMap": true,
		"skipLibCheck": true
	},
	"exclude": [
		"dist",
		"node_modules"
	],
	"include": [
		"src",
		"test"
	]
}
